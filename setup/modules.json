{
  "modules": [
    {
      "name": "desktop_environment",
      "packages": [
        "bluedevil",
        "breeze",
        "breeze-gtk",
        "kactivitymanagerd",
        "kde-cli-tools",
        "kde-gtk-config",
        "kdecoration",
        "kdeplasma-addons",
        "kgamma5",
        "khotkeys",
        "kinfocenter",
        "kmenuedit",
        "kscreen",
        "kscreenlocker",
        "ksshaskpass",
        "ksysguard",
        "kwallet-pam",
        "kwayland-integration",
        "kwin",
        "kwrited",
        "libkscreen",
        "libksysguard",
        "milou",
        "plasma-browser-integration",
        "plasma-desktop",
        "plasma-integration",
        "plasma-nm",
        "plasma-pa",
        "plasma-workspace",
        "plasma-workspace-wallpapers",
        "polkit-kde-agent",
        "powerdevil",
        "sddm-kcm",
        "systemsettings",
        "ark",
        "dolphin",
        "ffmpegthumbs",
        "filelight",
        "gwenview",
        "kaccounts-integration",
        "kaccounts-providers",
        "kdegraphics-thumbnailers",
        "kdenetwork-filesharing",
        "kdialog",
        "keditbookmarks",
        "khelpcenter",
        "kio-extras",
        "ksystemlog",
        "kwalletmanager",
        "okular",
        "print-manager",
        "signon-kwallet-extension",
        "spectacle",
        "kdeconnect",
        "partitionmanager",
        "sshfs",
        "unrar",
        "bluez-utils",
        "i3-gaps",
        "dunst",
        "wmctrl",
        "picom",
        "feh",
        "noto-fonts",
        "noto-fonts-cjk",
        "noto-fonts-emoji",
        "noto-fonts-extra",
        "ttf-liberation",
        "firefox",
        "mpv",
        "keepassxc",
        "syncthing",
        "signal-desktop",
        "redshift",
        "obs-studio",
        "kdenlive",
        "rofi",
        "rofi-calc",
        "dmenu",
        "kitty",
        "gimp",
        "spotifyd",
        "mesa"
      ],
      "commands": [
        "cp /home/$user/Projects/linux_setup/plasma/dolphinrc /home/$user/.config/dolphinrc",
        "cp /home/$user/Projects/linux_setup/plasma/ksplashrc /home/$user/.config/ksplashrc",
        "mkdir -p  /home/$user/.local/share/applications",
        "cp  /home/$user/Projects/linux_setup/rofi/powermenu/powermenu.sh.desktop /home/$user/.local/share/applications",
        "ln -s /usr/bin/rofi /usr/bin/dmenu",
        "cp /home/$user/Projects/linux_setup/plasma/plasma-i3.desktop /usr/share/xsessions",
        "systemctl enable sddm",
        "cp /home/$user/Projects/linux_setup/polybar/95-usb.rules /etc/udev/rules.d/95-usb.rules",
        "mkdir -p /home/$user/.cache/spotifyd"
      ],
      "aur": [
        "polybar",
        "scrcpy",
        "syncthingtray",
        "nerd-fonts-jetbrains-mono",
        "spotify-tui-bin"
      ],
      "user_commands": []
    },
    {
      "name":"development",
      "packages": [
        "jdk11-openjdk gradle",
        "python-pip",
        "go",
        "plantuml graphviz",
        "gdb",
        "docker",
        "docker-compose"
      ],
      "commands": [
        "systemctl enable docker.service",
        "usermod -aG docker $user"
      ],
      "aur": [
        "insomnia-bin"
      ],
      "user_commands": [
        "pip install jedi pylint --user",
        "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --no-modify-path"
      ]
    },
    {
      "name":"virtualization",
      "packages": [
        "qemu",
        "virt-manager",
        "virt-viewer",
        "dnsmasq",
        "vde2",
        "bridge-utils",
        "openbsd-netcat",
        "ovmf",
        "ebtables",
        "iptables"
      ],
      "commands": [
        "systemctl enable libvirtd.service",
        "sed -i 's/#unix_sock_group = \"libvirt\"/unix_sock_group = \"libvirt\"/g' /etc/libvirt/libvirtd.conf",
        "sed -i 's/#unix_sock_rw_perms = \"0770\"/unix_sock_rw_perms = \"0770\"/g' /etc/libvirt/libvirtd.conf",
        "usermod -aG libvirt $user"
      ],
      "aur": [],
      "user_commands": []
    },
    {
      "name":"gaming",
      "packages": [
        "wine-staging",
        "lutris",
        "steam",
        "discord" ,
        "retroarch",
        "retroarch-assets-xmb",
        "gamemode",
        "lib32-gamemode"
      ],
      "commands": [],
      "aur": [
        "steam-fonts"
      ],
      "user_commands": []
    },
    {
      "name":"office",
      "packages": [
        "libreoffice-fresh",
        "libreoffice-fresh-de",
        "texlive-most",
        "cups",
        "system-config-printer"
      ],
      "commands": [
        "systemctl enable org.cups.cupsd.service"
      ],
      "aur": [
        "pandoc-bin"
      ],
      "user_commands": []
    },
    {
      "name":"nvidia",
      "packages": [
"dkms",
"linux-headers",
"nvidia-dkms",
"nvidia-utils",
"lib32-nvidia-utils",
"nvidia-settings",
"vulkan-icd-loader",
"lib32-vulkan-icd-loader"
      ],
      "commands": [],
      "aur": [],
      "user_commands": []
    },
    {
      "name":"notebook",
      "packages": [],
      "commands": [],
      "aur": [],
      "user_commands": []
    },
    {
      "name":"logitech",
      "packages": [],
      "commands": [],
      "aur": [],
      "user_commands": []
    }
  ]
}
