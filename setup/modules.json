{
  "modules": [
    {
      "name": "desktop_environment",
      "packages": [
        "kdecoration",
        "breeze",
        "breeze-gtk",
        "ark",
        "kio-extras",
        "dolphin",
        "ffmpegthumbs",
        "filelight",
        "signon-kwallet-extension",
        "kaccounts-integration",
        "gwenview",
        "kdenetwork-filesharing",
        "okular",
        "print-manager",
        "spectacle",
        "kdeconnect",
        "partitionmanager",
        "sshfs",
        "unrar",
        "bluez-utils",
        "i3-gaps",
        "dunst",
        "wmctrl",
        "picom",
        "feh",
        "noto-fonts",
        "noto-fonts-cjk",
        "noto-fonts-emoji",
        "noto-fonts-extra",
        "ttf-liberation",
        "firefox",
        "mpv",
        "keepassxc",
        "syncthing",
        "signal-desktop",
        "redshift",
        "obs-studio",
        "kdenlive",
        "rofi",
        "dmenu",
        "gimp",
        "mesa",
        "xorg-xrandr",
        "ueberzug",
        "alacritty",
        "kid3",
        "network-manager-applet",
        "pavucontrol",
        "arandr",
        "blueman",
        "lxappearance",
        "sddm"
      ],
      "commands": [
        "cp /home/$user/Projects/linux_setup/plasma/dolphinrc /home/$user/.config/dolphinrc",
        "cp /home/$user/Projects/linux_setup/plasma/ksplashrc /home/$user/.config/ksplashrc",
        "mkdir -p  /home/$user/.local/share/applications",
        "cp  /home/$user/Projects/linux_setup/rofi/powermenu/powermenu.sh.desktop /home/$user/.local/share/applications",
        "ln -s /usr/bin/rofi /usr/bin/dmenu",
        "tar -xzvf /home/$user/Projects/linux_setup/sddm/sddm-chili.tar.gz -C /usr/share/sddm/themes",
        "cp /home/$user/Projects/linux_setup/sddm/theme.conf.user /usr/share/sddm/themes/chili/theme.conf.user",
        "cp /home/$user/Projects/linux_setup/wallpaper.png /usr/share/sddm/themes/chili/wallpaper.png",
        "cp /home/$user/Projects/linux_setup/sddm/sddm.conf /etc/sddm.conf.d/sddm.conf",
        "systemctl enable sddm",
        "cp /home/$user/Projects/linux_setup/polybar/95-usb.rules /etc/udev/rules.d/95-usb.rules",
        "echo 'xrandr --rate 144' >> /usr/share/sddm/scripts/Xsetup"
      ],
      "aur": [
        "polybar",
        "scrcpy",
        "syncthingtray",
        "nerd-fonts-fira-code",
        "ytfzf",
        "sublime-music",
        "pipes-rs",
        "i3lock-color",
        "qgnomeplatform"
      ],
      "user_commands": []
    },
    {
      "name": "development",
      "packages": [
        "jdk11-openjdk",
        "gradle",
        "python-pip",
        "go",
        "plantuml",
        "graphviz",
        "gdb",
        "docker",
        "docker-compose",
        "github-cli"
      ],
      "commands": [
        "systemctl enable docker.service",
        "usermod -aG docker $user"
      ],
      "aur": ["insomnia-bin", "gitlab-glab-bin", "intellij-idea-ce"],
      "user_commands": [
        "go get code.gitea.io/tea",
        "pip install jedi pylint --user",
        "curl --proto ;=https; --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --no-modify-path"
      ]
    },
    {
      "name": "virtualization",
      "packages": [
        "qemu",
        "virt-manager",
        "virt-viewer",
        "dnsmasq",
        "vde2",
        "bridge-utils",
        "openbsd-netcat",
        "ovmf",
        "ebtables",
        "iptables"
      ],
      "commands": [
        "systemctl enable libvirtd.service",
        "sed -i ;s/#unix_sock_group = \"libvirt\"/unix_sock_group = \"libvirt\"/g; /etc/libvirt/libvirtd.conf",
        "sed -i ;s/#unix_sock_rw_perms = \"0770\"/unix_sock_rw_perms = \"0770\"/g; /etc/libvirt/libvirtd.conf",
        "usermod -aG libvirt $user"
      ],
      "aur": [],
      "user_commands": []
    },
    {
      "name": "gaming",
      "packages": [
        "wine-staging",
        "lutris",
        "steam",
        "discord",
        "retroarch",
        "retroarch-assets-xmb",
        "gamemode",
        "lib32-gamemode"
      ],
      "commands": [],
      "aur": ["steam-fonts"],
      "user_commands": []
    },
    {
      "name": "office",
      "packages": [
        "libreoffice-fresh",
        "libreoffice-fresh-de",
        "texlive-most",
        "cups",
        "system-config-printer"
      ],
      "commands": ["systemctl enable org.cups.cupsd.service"],
      "aur": ["pandoc-bin"],
      "user_commands": []
    },
    {
      "name": "nvidia",
      "packages": [
        "dkms",
        "linux-headers",
        "nvidia-dkms",
        "nvidia-utils",
        "lib32-nvidia-utils",
        "nvidia-settings",
        "vulkan-icd-loader",
        "lib32-vulkan-icd-loader"
      ],
      "commands": [],
      "aur": [],
      "user_commands": []
    },
    {
      "name": "notebook",
      "packages": [
        "xf86-input-libinput",
        "xf86-input-synaptics",
        "tlp",
        "nvidia-prime"
      ],
      "commands": [
        "systemctl enable tlp.service",
        "systemctl enable bluetooth.service"
      ],
      "aur": [],
      "user_commands": []
    },
    {
      "name": "logitech",
      "packages": ["piper"],
      "commands": [
        "cp /home/$user/Projects/linux_setup/other/60-openrgb.rules /etc/udev/rules.d/60-openrgb.rules"
      ],
      "aur": ["openrgb"],
      "user_commands": []
    }
  ]
}
