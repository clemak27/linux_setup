{
  "modules": [
    {
      "name": "desktop_environment",
      "packages": [
        "plasma",
        "ark",
        "dolphin",
        "dolphin-plugins",
        "gwenview",
        "kdeconnect",
        "kdenlive",
        "latte-dock",
        "okular",
        "partitionmanager",
        "print-manager",
        "spectacle",
        "alacritty",
        "firefox",
        "gimp",
        "keepassxc",
        "kid3",
        "mpv",
        "noto-fonts",
        "noto-fonts-cjk",
        "noto-fonts-emoji",
        "noto-fonts-extra",
        "obs-studio",
        "rofi",
        "signal-desktop",
        "sshfs",
        "syncthing",
        "ttf-liberation",
        "mesa",
        "ueberzug",
        "unrar"
      ],
      "commands": [
        "ln -s /usr/bin/rofi /usr/bin/dmenu",
        "mkdir -p  /home/$user/.local/share/applications",
        "cp  /home/$user/Projects/linux_setup/rofi/powermenu/powermenu.sh.desktop /home/$user/.local/share/applications",
        "tar -xzvf /home/$user/Projects/linux_setup/sddm/sddm-chili.tar.gz -C /usr/share/sddm/themes",
        "cp /home/$user/Projects/linux_setup/sddm/theme.conf.user /usr/share/sddm/themes/chili/theme.conf.user",
        "cp /home/$user/Projects/linux_setup/wallpaper.png /usr/share/sddm/themes/chili/wallpaper.png",
        "cp /home/$user/Projects/linux_setup/sddm/sddm.conf /etc/sddm.conf.d/sddm.conf",
        "systemctl enable sddm"
      ],
      "aur": [
        "scrcpy",
        "nerd-fonts-fira-code",
        "ytfzf",
        "sublime-music"
      ],
      "user_commands": [
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'directionalKeyDwm' false",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'directionalKeyFocus'=true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'enableFloatingLayout'=true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'enableQuarterLayout'=true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'enableSpreadLayout'=false",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'enableStairLayout'=false",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'floatingClass' keepassxc,systemsettings,plasma.emojier",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'ignoreClass' krunner,yakuake,spectacle,kded5,steam",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'layoutPerDesktop' true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'maximizeSoleTile' true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'noTileBorder' true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'preventMinimize' true",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'screenGapBottom' 7",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'screenGapLeft' 7",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'screenGapRight' 7",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'screenGapTop' 7",
        "kwriteconfig5 --file 'kwinrc' --group 'Script-krohnkite' --key 'tileLayoutGap' 7"
      ]
    },
    {
      "name": "development",
      "packages": [
        "github-cli"
      ],
      "commands": [
        "touch /etc/subuid /etc/subgid",
        "usermod --add-subuids 100000-165535 --add-subgids 100000-165535 $user",
        "podman system migrate"
      ],
      "aur": [
        "pgcli"
      ],
      "user_commands": []
    },
    {
      "name": "virtualization",
      "packages": [
        "qemu",
        "virt-manager",
        "virt-viewer",
        "dnsmasq",
        "vde2",
        "bridge-utils",
        "openbsd-netcat",
        "ovmf",
        "ebtables",
        "iptables"
      ],
      "commands": [
        "systemctl enable libvirtd.service",
        "sed -i ;s/#unix_sock_group = \"libvirt\"/unix_sock_group = \"libvirt\"/g; /etc/libvirt/libvirtd.conf",
        "sed -i ;s/#unix_sock_rw_perms = \"0770\"/unix_sock_rw_perms = \"0770\"/g; /etc/libvirt/libvirtd.conf",
        "usermod -aG libvirt $user"
      ],
      "aur": [],
      "user_commands": []
    },
    {
      "name": "gaming",
      "packages": [
        "wine-staging",
        "lutris",
        "steam",
        "discord",
        "retroarch",
        "retroarch-assets-xmb",
        "gamemode",
        "lib32-gamemode"
      ],
      "commands": [],
      "aur": ["steam-fonts"],
      "user_commands": []
    },
    {
      "name": "office",
      "packages": [
        "libreoffice-fresh",
        "libreoffice-fresh-de",
        "texlive-most",
        "cups",
        "system-config-printer"
      ],
      "commands": ["systemctl enable org.cups.cupsd.service"],
      "aur": ["pandoc-bin"],
      "user_commands": []
    },
    {
      "name": "nvidia",
      "packages": [
        "dkms",
        "linux-headers",
        "nvidia-dkms",
        "nvidia-utils",
        "lib32-nvidia-utils",
        "nvidia-settings",
        "vulkan-icd-loader",
        "lib32-vulkan-icd-loader"
      ],
      "commands": [],
      "aur": [],
      "user_commands": []
    },
    {
      "name": "notebook",
      "packages": [
        "xf86-input-libinput",
        "xf86-input-synaptics",
        "tlp",
        "nvidia-prime"
      ],
      "commands": [
        "systemctl enable tlp.service",
        "systemctl enable bluetooth.service"
      ],
      "aur": [],
      "user_commands": []
    },
    {
      "name": "logitech",
      "packages": ["piper"],
      "commands": [
        "cp /home/$user/Projects/linux_setup/other/60-openrgb.rules /etc/udev/rules.d/60-openrgb.rules"
      ],
      "aur": ["openrgb"],
      "user_commands": []
    }
  ]
}
