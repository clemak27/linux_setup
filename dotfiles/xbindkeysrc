# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
XF86AudioMute

# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
XF86AudioLowerVolume

# Play/Pause
"playerctl play-pause"
XF86AudioPlay

# Stop
"playerctl stop"
XF86AudioStop

# Previous Track
"playerctl previous"
XF86AudioPrev

# Next Track
"playerctl next"
XF86AudioNext
