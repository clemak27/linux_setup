""" Plugins  --------------------------------
set surround
set commentary
set ReplaceWithRegister
set argtextobj
set textobj-entire

""" Common settings -------------------------
set hlsearch
set ignorecase
set incsearch
set nu
set showmode
set smartcase
set so=5
set clipboard+=unnamedplus

""" Idea specific settings ------------------
set ideajoin

""" Mappings --------------------------------
" set mapleader to space
let mapleader = ' '
" Remap 0 and § to first non-blank character
map § ^
map 0 ^
" Remap ß to end of line
map ß $
" go to definition
map <silent> gd <Action>(GotoDeclaration)
" go to implementation
map <silent> gi <Action>(GotoImplementation)
" run current config
map <silent> rr <Action>(Run)
" run current debug config
map <silent> rd <Action>(Debug)
" run class
map <silent> rc <Action>(RunClass)
" reformat code
map <silent> == <Action>(ReformatCode)
" move tab to right
map <C-l> <Action>(NextTab)
" move tab to left
map <C-h> <Action>(PreviousTab)
" focus terminal
map <leader>t <Action>(ActivateTerminalToolWindow)
" focus file in project view
map <leader>n <Action>(SelectInProjectView)
